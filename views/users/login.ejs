<%- include("../partials/header.ejs") %>
<title>Login</title>
<%- include("../partials/navbar-dim.ejs") %>
    <div class="container d-flex justify-content-center align-items-center mt-2">
        <div class="row">
            <div class="card shadow pt-1 px-1">
                <h5 class="card-header">Welcome to Meal Creator! - Login</h5>
                <img style="min-width: 1000px; max-height: 400px; object-fit: cover;" src="https://images.unsplash.com/photo-1543353071-873f17a7a088?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <%- include('../partials/flash') %>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mx-3">
                            <label class="form-label user-input-labels" for="username">Username</label>
                            <input class="form-control user-input-fields" type="text" id="username" name="username" required autofocus>
                        </div>
                        <div class="mx-3">
                            <label class="form-label user-input-labels" for="password">Password</label>
                            <input class="form-control user-input-fields" type="password" id="password" name="password" required>
                        </div>
                        <div class="mx-3 d-flex">
                            <button class="btn btn-success btn-block user-btn-login">Login</button>
                        </form>
                            <form action="/register" method="GET" class="validated-form d-inline-block" novalidate>
                                <button type="submit" class="btn btn-success btn-block user-btn-reg">&lsaquo; Register</button>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
<%- include("../partials/scripts.ejs") %>
