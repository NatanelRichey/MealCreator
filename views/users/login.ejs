<%- include("../partials/header.ejs") %>
<title>Login</title>
<style>
.card.login-reg .card-img-top {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: cover;
}
.btn-login-default {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 15px 40px;
    font-size: 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: 500;
}
.btn-login-default:hover {
    background-color: #218838;
    color: white;
}
.btn-demo-original {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 15px 30px;
    font-size: 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: 500;
    white-space: normal;
    max-width: 400px;
}
.btn-demo-original:hover {
    background-color: #218838;
    color: white;
}
</style>
<%- include("../partials/navbar-dim.ejs") %>
    <div class="container d-flex justify-content-center align-items-center mt-2">
        <div class="card login-reg shadow pt-1 px-1">
            <h5 class="card-header">Welcome to Meal Creator! - Login</h5>
            <img src="https://images.unsplash.com/photo-1543353071-873f17a7a088?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
                alt="" class="card-img-top" />
            <div class="card-body login-reg justify-content-center d-flex align-items-center" style="background-color: white; min-height: 200px;">
                <%- include('../partials/flash') %>
                <div class="d-flex gap-3 flex-wrap justify-content-center">
                    <form action="/login" method="POST">
                        <input type="hidden" name="username" value="defaultuser">
                        <input type="hidden" name="password" value="defaultpass">
                        <button type="submit" class="btn btn-login-default">Login</button>
                    </form>
                    <form action="/demo-login" method="POST">
                        <button type="submit" class="btn btn-demo-original">üçî Demo Account - Try Without Signing Up!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
