<%- include("../partials/header.ejs") %>
<title>Login</title>
<style>
.card.login-reg .card-img-top {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: cover;
}
.btn-login-custom, .btn-demo-custom {
    background-color: #6aaf49;
    color: white;
    border: none;
    padding: 12px 40px;
    font-size: 18px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: 500;
}
.btn-login-custom:hover, .btn-demo-custom:hover {
    background-color: #5a9f39;
    color: white;
}
.user-input-fields {
    width: 100% !important;
    padding: 10px;
    font-size: 16px;
}
.user-input-labels {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 5px;
}
</style>
<%- include("../partials/navbar-dim.ejs") %>
    <div class="container d-flex justify-content-center align-items-center mt-2">
        <div class="card login-reg shadow pt-1 px-1">
            <h5 class="card-header">Welcome to Meal Creator! - Login</h5>
            <img src="https://images.unsplash.com/photo-1543353071-873f17a7a088?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80"
                alt="" class="card-img-top" />
            <div class="card-body login-reg justify-content-center" style="background-color: white;">
                <%- include('../partials/flash') %>
                <form action="/login" method="POST" class="validated-form d-block" novalidate>
                    <div class="mb-3">
                        <label class="form-label user-input-labels" for="username">Username</label>
                        <input class="form-control user-input-fields" type="text" id="username" name="username" required autofocus style="width: 100%;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label user-input-labels" for="password">Password</label>
                        <input class="form-control user-input-fields" type="password" id="password" name="password" required style="width: 100%;">
                    </div>
                    <div class="d-flex gap-3 justify-content-center mt-4">
                        <button type="submit" class="btn btn-login-custom">Login</button>
                        <button type="button" class="btn btn-demo-custom" onclick="document.getElementById('demo-form').submit()">Demo</button>
                    </div>
                </form>
                <form id="demo-form" action="/demo-login" method="POST" style="display: none;">
                </form>
            </div>
        </div>
    </div>
<%- include("../partials/scripts.ejs") %>
