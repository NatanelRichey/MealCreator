<title>Meal Creator - Results</title>
<%- include("../partials/navbar.ejs") %>
<!-------------------------------------------------- ENTER CONTENT HERE -------------------------------------------------->
<section class="container fourth-page-cont">
        <div class="row matched-meal-row d-flex justify-content-begin">
        <% let res = []; for (meal of matchedMeals) { %> 
            <% if (!res.includes(meal.mealName)) { res.push(meal.mealName); %> 
            <div class="col-sm-3 d-flex justify-content-begin">
                <button class="btn btn-default selection-button-meal" id = "matched-meal-btn">
                    <img src="<%=meal.imgSrc%>" class="selection-images img-fluid" id = "matched-meal-image"/> 
                    <div class="matched-meal-txt"><%=meal.mealName%></div>
                </button>
            </div> 
            <% } %>
        <% } %>
        </div>
</section>
<!--------------------------------------------------- CONTENT ENDS HERE -------------------------------------------------->
