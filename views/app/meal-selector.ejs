<style>
.selector-container {
    max-width: 1000px;
    min-height: calc(100vh - 80px);
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.selector-title {
    text-align: center;
    font-size: 1.8rem;
    font-family: 'Athiti', sans-serif;
    font-weight: 400;
    margin-bottom: 1rem;
    color: #333;
}

.selector-subtitle {
    text-align: center;
    font-size: 1rem;
    font-family: 'Athiti', sans-serif;
    font-weight: 400;
    color: #666;
    margin-bottom: 2.5rem;
}

.options-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    gap: 1.5rem;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
}

/* Grid positions 1-9 (left to right, top to bottom) */
/* Position 1 - Surprise Me */
.surprise-card {
    grid-column: 1;
    grid-row: 1;
}

/* Position 2 - Healthy (2nd child because surprise is 1st) */
.option-card:nth-child(2) {
    grid-column: 2;
    grid-row: 1;
}

/* Position 3 - Regular */
.option-card:nth-child(3) {
    grid-column: 3;
    grid-row: 1;
}

/* Position 4 - Breakfast */
.option-card:nth-child(4) {
    grid-column: 1;
    grid-row: 2;
}

/* Position 5 - Lunch */
.option-card:nth-child(5) {
    grid-column: 2;
    grid-row: 2;
}

/* Position 6 - Dinner */
.option-card:nth-child(6) {
    grid-column: 3;
    grid-row: 2;
}

/* Position 7 - Dairy */
.option-card:nth-child(7) {
    grid-column: 1;
    grid-row: 3;
}

/* Position 8 - Parve */
.option-card:nth-child(8) {
    grid-column: 2;
    grid-row: 3;
}

/* Position 9 - Meaty */
.option-card:nth-child(9) {
    grid-column: 3;
    grid-row: 3;
}

.surprise-card {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 3px solid #a3be52;
    background: #a3be52;
    display: flex;
    align-items: center;
    justify-content: center;
}

.surprise-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(163, 190, 82, 0.5);
    background: #b5ce6a;
}

.surprise-label {
    color: white;
    font-size: 1.3rem;
    font-family: 'Athiti', sans-serif;
    font-weight: 400;
    text-align: center;
    padding: 1rem;
}

.option-card {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 3px solid transparent;
}

.option-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.3s ease;
    filter: grayscale(100%);
}

.option-card.selected {
    border-color: #28a745;
    box-shadow: 0 0 20px rgba(40, 167, 69, 0.5);
}

.option-card.selected img {
    filter: grayscale(0%);
}

.option-label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
    padding: 1.5rem 0.5rem 0.5rem;
    text-align: center;
    font-size: 1.1rem;
    font-family: 'Athiti', sans-serif;
    font-weight: 400;
}


@media (max-width: 768px) {
    .selector-container {
        padding: 1rem;
    }
    
    .selector-title {
        font-size: 1.5rem;
    }
    
    .options-grid {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 1rem;
    }
    
    .surprise-card,
    .option-card:nth-child(2),
    .option-card:nth-child(3),
    .option-card:nth-child(4),
    .option-card:nth-child(5),
    .option-card:nth-child(6),
    .option-card:nth-child(7),
    .option-card:nth-child(8),
    .option-card:nth-child(9) {
        grid-column: 1;
        grid-row: auto;
    }
    
    .option-label,
    .surprise-label {
        font-size: 0.9rem;
    }
}
</style>

<section class="selector-container">
    <h1 class="selector-title">Find Your Perfect Meal</h1>
    <p class="selector-subtitle">Select one option from each category</p>
    
    <form id="meal-selector-form" action="/app/find-meals" method="POST">
        <div class="options-grid">
            <!-- Surprise Me Button -->
            <div class="surprise-card" id="surprise-btn">
                <div class="surprise-label">Surprise Me!</div>
            </div>
            
            <!-- Health Column -->
            <div class="option-card" data-category="health" data-value="Healthy">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/healthy.jpg" alt="Healthy">
                <div class="option-label">Healthy</div>
            </div>
            <div class="option-card" data-category="health" data-value="Regular">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/regular.jpg" alt="Regular">
                <div class="option-label">Regular</div>
            </div>
            
            <!-- Meal Time Column -->
            <div class="option-card" data-category="mealtime" data-value="Breakfast">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/breakfast.jpg" alt="Breakfast">
                <div class="option-label">Breakfast</div>
            </div>
            <div class="option-card" data-category="mealtime" data-value="Lunch">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/lunch.jpg" alt="Lunch">
                <div class="option-label">Lunch</div>
            </div>
            <div class="option-card" data-category="mealtime" data-value="Dinner">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/dinner.jpg" alt="Dinner">
                <div class="option-label">Dinner</div>
            </div>
            
            <!-- Genre Column -->
            <div class="option-card" data-category="genre" data-value="Dairy">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/dairy.jpg" alt="Dairy">
                <div class="option-label">Dairy</div>
            </div>
            <div class="option-card" data-category="genre" data-value="Parve">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/parve.jpg" alt="Parve">
                <div class="option-label">Parve</div>
            </div>
            <div class="option-card" data-category="genre" data-value="Meaty">
                <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/meaty.jpg" alt="Meaty">
                <div class="option-label">Meaty</div>
            </div>
        </div>
        
        <input type="hidden" name="health" id="health-input">
        <input type="hidden" name="mealtime" id="mealtime-input">
        <input type="hidden" name="genre" id="genre-input">
    </form>
</section>

