<style>
.home-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 80px);
    padding: 2rem;
}

.home-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    max-width: 1400px;
    width: 100%;
}

.home-card {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
}

.home-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
}

.home-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.home-card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    padding: 2rem 1rem 1rem;
    color: white;
    font-size: 1.3rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    font-weight: 400;
    text-align: center;
}

.home-card-btn {
    border: none;
    background: none;
    padding: 0;
    width: 100%;
    height: 100%;
    display: block;
}

@media (max-width: 1200px) {
    .home-grid {
        grid-template-columns: repeat(2, 1fr);
        max-width: 900px;
    }
}

@media (max-width: 768px) {
    .home-container {
        padding: 1rem;
    }
    
    .home-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .home-card-overlay {
        font-size: 1.1rem;
    }
}
</style>

<section class="home-container">
  <div class="home-grid">
    <div class="home-card">
      <a href="/app/selector" class="home-card-btn">
        <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662550742/page-images/suprise.jpg" alt="Find Meal">
        <div class="home-card-overlay">Find Meal!</div>
      </a>
    </div>
    
    <div class="home-card">
      <a href="/pantry" class="home-card-btn">
        <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/healthy.jpg" alt="Pantry">
        <div class="home-card-overlay">Pantry</div>
      </a>
    </div>
    
    <div class="home-card">
      <a href="/shopping-list" class="home-card-btn">
        <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/breakfast.jpg" alt="Shopping List">
        <div class="home-card-overlay">Shopping List</div>
      </a>
    </div>
    
    <div class="home-card">
      <a href="/meals" class="home-card-btn">
        <img src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/dairy.jpg" alt="Meals">
        <div class="home-card-overlay">Meals</div>
      </a>
    </div>
  </div>
</section>
