<title>Meal Creator</title>
<%- include("../partials/navbar.ejs") %>
<!-------------------------------------------------- ENTER CONTENT HERE -------------------------------------------------->
<section class="container third-page-cont">
    <div class="card-group mt-5 mx-4">
      <% for (choice of choiceArr[2]) { %>
        <div class="card shadow pt-1 px-1 mx-2">
          <form class="three-choice-form" action="/app/<%=choice%>" method="post">
            <button type="submit" class="choice-btn">
              <img type="submit" style="min-width: 300px; min-height: 455px; object-fit: cover;" src="https://res.cloudinary.com/meal-creator/image/upload/v1662276033/page-images/<%=choice.toLowerCase()%>.jpg"
                  alt="" class="card-img-top" />
              <div class="card-body"><%=choice%></div>
            </button>
          </form>
        </div>
        <% } %> 
</section>
<!--------------------------------------------------- CONTENT ENDS HERE -------------------------------------------------->
